<UserControl x:Class="PC_Verwaltung.Manager"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PC_Verwaltung"
             mc:Ignorable="d" 
             d:DesignHeight="750"
             d:DesignWidth="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top" Background="#FFFFFF" FontSize="14">
            <MenuItem Header="_Datei">
                <MenuItem Header="_Neu" />
                <MenuItem Header="_Öffnen" />
                <MenuItem Header="_Speichern" />
                <Separator/>
                <MenuItem Header="_Beenden" Click="CloseClickEvent" />
            </MenuItem>
            <MenuItem Header="_Werkzeuge">
                <MenuItem Header="_Einstellungen"/>
            </MenuItem>
        </Menu>
        <Grid>
            <TabControl FontSize="14">
                <TabItem Header="Verwalten">
                    <GroupBox Header="PC" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0">
                        <Grid HorizontalAlignment="Left" VerticalAlignment="Top">
                            <Label Content="Welche Marke(n) mögen sie?" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                            <CheckBox Content="Intel" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top"/>
                            <CheckBox Content="Nvidia" HorizontalAlignment="Left" Margin="10,61,0,0" VerticalAlignment="Top"/>
                            <CheckBox Content="AMD" HorizontalAlignment="Left" Margin="10,81,0,0" VerticalAlignment="Top" IsEnabled="False"/>
                        </Grid>
                    </GroupBox>
                </TabItem>
                <TabItem Header="Anlegen">
                    <Label Content="Hier könnte ihre Werbung stehen..." />
                </TabItem>
            </TabControl>
        </Grid>
    </DockPanel>
</UserControl>
